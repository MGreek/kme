{
  "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
  "organizeImports": {
    "enabled": true,
    "include": [
      "src/**/*"
    ],
    "ignore": [
      "node_modules/**/*",
      "dist/**/*"
    ]
  },
  "formatter": {
    "include": [
      "src/**/*"
    ],
    "ignore": [
      "node_modules/**/*",
      "dist/**/*"
    ],
    "enabled": true,
    "formatWithErrors": true,
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "include": [
      "src/**/*"
    ],
    "ignore": [
      "node_modules/**/*",
      "dist/**/*"
    ]
  }
}
